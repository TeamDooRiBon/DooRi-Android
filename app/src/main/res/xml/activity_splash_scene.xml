<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="2000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/iv_splash_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.4"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/iv_splash_app_name"
            motion:layout_constraintEnd_toEndOf="@id/iv_splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintTop_toBottomOf="@id/iv_splash_logo"
            motion:layout_constraintStart_toStartOf="@id/iv_splash_logo"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/tv_app_description"
            motion:layout_constraintEnd_toEndOf="@id/iv_splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintTop_toBottomOf="@id/iv_splash_app_name"
            motion:layout_constraintStart_toStartOf="@id/iv_splash_logo"
            android:layout_marginTop="24dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/iv_splash_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/iv_splash_app_name"
            motion:layout_constraintEnd_toEndOf="@id/iv_splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@id/iv_splash_logo"
            motion:layout_constraintStart_toStartOf="@id/iv_splash_logo"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/tv_app_description"
            motion:layout_constraintEnd_toEndOf="@id/iv_splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@id/iv_splash_app_name"
            motion:layout_constraintStart_toStartOf="@id/iv_splash_logo"
            android:layout_marginTop="24dp" />
    </ConstraintSet>
</MotionScene>