<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DooRiBonAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundButton.DooRiBonOrange">
        <item name="backgroundTint">@color/doo_ri_bon_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 요청 사항 2번 -->
    <style name="RoundButton.DooRiBonMainBlue">
        <item name="backgroundTint">@color/doo_ri_bon_blue</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.DooRiBonStrokeOrange">
        <item name="strokeColor">@color/doo_ri_bon_orange</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/doo_ri_bon_orange</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="RoundButton.DooRiBonGray7">
        <item name="backgroundTint">@color/doo_ri_bon_gray7</item>
    </style>

    <style name="RoundBlueTextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_main_blue_round_textview</item>
    </style>

    <style name="BlackBoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteBoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlueTextView" parent="BlackBoldTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/doo_ri_bon_blue</item>
    </style>

    <style name="SubBlue2TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/doo_ri_bon_sub_blue2</item>
    </style>

    <style name="AirplanePureWhiteIconTextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawableLeft">@drawable/ic_airplane_pure_white</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="AirplaneBlackGrayIconTextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawableLeft">@drawable/ic_airplane_black_gray4</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="UserPureWhiteIconTextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawableLeft">@drawable/ic_user_pure_white</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="UserBlackGrayIconTextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawableLeft">@drawable/ic_user_black_gray4</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="OrangeTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/doo_ri_bon_orange</item>
        <item name="tabSelectedTextColor">@color/doo_ri_bon_orange</item>
    </style>
</resources>