<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="64dp"
    android:layout_marginRight="18dp">

    <TextView
        android:id="@+id/tv_participate_ex1"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:gravity="top"
        android:letterSpacing="-0.03"
        android:text="@string/participate_text"
        android:textSize="23sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_buttons"
        app:layout_constraintTop_toBottomOf="@id/tv_participate_ex1"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="36dp"
        android:layout_marginHorizontal="30dp">

        <EditText
            android:id="@+id/et_code1"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:paddingBottom="12dp"
            android:textColor="#6B8FF9"
            android:elevation="10dp"
            android:background="@drawable/text_round"
            app:layout_constraintEnd_toStartOf="@id/et_code2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
            android:id="@+id/et_code2"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#6B8FF9"
            android:elevation="10dp"
            android:background="@drawable/text_round"
            app:layout_constraintEnd_toStartOf="@id/et_code3"
            app:layout_constraintStart_toEndOf="@+id/et_code1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
            android:id="@+id/et_code3"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#6B8FF9"
            android:elevation="10dp"
            android:background="@drawable/text_round"
            app:layout_constraintEnd_toStartOf="@id/et_code4"
            app:layout_constraintStart_toEndOf="@+id/et_code2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <EditText
            android:id="@+id/et_code4"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#6B8FF9"
            android:elevation="10dp"
            android:background="@drawable/text_round"
            app:layout_constraintEnd_toStartOf="@id/et_code5"
            app:layout_constraintStart_toEndOf="@+id/et_code3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
            android:id="@+id/et_code5"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#6B8FF9"
            android:elevation="10dp"
            android:background="@drawable/text_round"
            app:layout_constraintEnd_toStartOf="@id/et_code6"
            app:layout_constraintStart_toEndOf="@+id/et_code4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <EditText
            android:id="@+id/et_code6"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#6B8FF9"
            android:elevation="10dp"
            android:background="@drawable/text_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_code5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_participate_put"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E9EBED"
        android:text="@string/all_put"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/tv_participate_ex1"
        app:layout_constraintTop_toBottomOf="@+id/cl_buttons" />


</androidx.constraintlayout.widget.ConstraintLayout>