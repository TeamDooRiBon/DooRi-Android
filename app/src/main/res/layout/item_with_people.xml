<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <kr.co.dooribon.view.DooRiBonRoundShadowImageView
        android:id="@+id/iv_circle_person_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_launcher_background"
        app:image_view_shadow_color="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:text="김민영"
        android:textColor="@color/gray_black_3"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_circle_person_img"
        app:layout_constraintStart_toEndOf="@id/iv_circle_person_img"
        app:layout_constraintTop_toTopOf="@id/iv_circle_person_img" />


</androidx.constraintlayout.widget.ConstraintLayout>